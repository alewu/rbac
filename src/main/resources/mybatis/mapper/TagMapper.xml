<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ale.dao.TagDAO">

    <!-- 通用查询结果列：数据库表字段 -->
    <sql id="Base_Column_List">
        tag_id,
        tag_name,
        gmt_create,
        gmt_modified
    </sql>
    <!-- 通用resultMap：实体类成员变量一一对应数据库表字段 -->
    <resultMap type="com.ale.entity.Tag" id="BaseResultMap">
        <id property="tagId" column="tag_id" />
        <result property="tagName" column="tag_name" />
        <result property="gmtCreate" column="gmt_create" />
        <result property="gmtModified" column="gmt_modified" />
    </resultMap>

    <insert id="saveOne" useGeneratedKeys="true" keyProperty="tagId" parameterType="com.ale.entity.Tag">
        INSERT INTO tb_tag
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="tagId != null">
                tag_id,
            </if>
            <if test="tagName != null and tagName !=''">
                tag_name,
            </if>
            <if test="gmtCreate != null">
                gmt_create,
            </if>
            <if test="gmtModified != null">
                gmt_modified,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="tagId != null">
                #{tagId},
            </if>
            <if test="tagName != null and tagName !=''">
                #{tagName},
            </if>
            <if test="gmtCreate != null">
                #{gmtCreate},
            </if>
            <if test="gmtModified != null">
                #{gmtModified},
            </if>
        </trim>
    </insert>
    <delete id="removeOne" parameterType="java.lang.Integer">
        DELETE FROM tb_tag
        WHERE tag_id = #{tagId}
    </delete>
    <update id="updateOne" parameterType="com.ale.entity.Tag">
        UPDATE tb_tag
        <set>
            <if test="tagName != null and tagName !=''">
                tag_name = #{tagName},
            </if>
            <if test="gmtCreate != null">
                gmt_create = #{gmtCreate},
            </if>
            <if test="gmtModified != null">
                gmt_modified = #{gmtModified},
            </if>
        </set>
        WHERE tag_id = #{tagId}
    </update>
    <select id="getOne" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM tb_tag
        WHERE tag_id = #{tagId}
    </select>

    <select id="listTag" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM tb_tag
        <where>
            <if test="keyword != null and keyword != ''">
                <bind name="pattern_keyword" value="'%' + keyword + '%'"/>
                columnName LIKE  #{pattern_keyword}
            </if>
        </where>
    </select>


</mapper>


